<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hamburger_game_Activity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/kichin"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/one"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="250dp"
                    android:src="@drawable/bundown">
                </ImageView>
                <ImageView
                    android:id="@+id/two"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="230dp"
                    android:src="@drawable/lettus">
                </ImageView>
                <ImageView
                    android:id="@+id/three"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="210dp"
                    android:src="@drawable/meat">
                </ImageView>
                <ImageView
                    android:id="@+id/four"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="190dp"
                    android:src="@drawable/bacon">
                </ImageView>
                <ImageView
                    android:id="@+id/five"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="170dp"
                    android:src="@drawable/tamato">
                </ImageView>
                <ImageView
                    android:id="@+id/six"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="150dp"
                    android:src="@drawable/piccle">
                </ImageView>

                <ImageView
                    android:id="@+id/seven"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="130dp"
                    android:src="@drawable/piccle"></ImageView>

                <ImageView
                    android:id="@+id/eight"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="110dp"
                    android:src="@drawable/piccle">
                </ImageView>
                <ImageView
                    android:id="@+id/nine"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="90dp"
                    android:src="@drawable/piccle">
                </ImageView>
                <ImageView
                    android:id="@+id/ten"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="70dp"
                    android:src="@drawable/piccle">
                </ImageView>
                <ImageView
                    android:id="@+id/eleven"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/bunup">
                </ImageView>

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="12">
            <Button
                android:id="@+id/hamburger"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="햄버거의 재료를 올리세요!"
                android:textSize="22dp"
                android:layout_gravity="center"
                ></Button>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background"
        android:scaleType = "fitXY">
    </ImageView>


</RelativeLayout>